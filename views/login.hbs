 <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1" />
 <meta http-equiv="X-UA-Compatible" content="ie=edge" />
<link type="text/css" href="/public/login.css" rel="stylesheet" />
<title>Login</title>
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="/public/images/web-developer.png" class="img-web" title="web" alt="web" />
      </div>
     
     
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

          <form method="POST" action="/login">
            <div class="form-group">
              <h1>LOGIN</h1>
               {{#if message}}
        <div class="alert {{messageClass}}" role="alert">
          {{message}}
        </div>
      {{/if}}
              <label for="exampleInputEmail1">Email address</label>
              <input name="email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" />
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" />
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Login</button><br />
            
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account ?  <a href="/register" class="btn-sub link-danger">Register here</a></p>
          </form>
        </div>

      </div>
    </div>

  </div>
</section>